{% extends 'base.html.twig' %}

{% block title %}Pending articles{% endblock %}

{% block body %}

    <header class="masthead">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12 text-center text-white masthead-frame">
                    <h1 class="font-weight-light">Pending articles</h1>
                    <p class="lead">Subtitle</p>
                </div>
            </div>
        </div>
    </header>

    <!-- Page Content -->
    <section class="py-5">
        <div class="container">
            <div class="row header-dashboard py-5">
                <div class="col-md-12 text-center dashboard_menu">
                    <h2>Pending articles</h2>
                    <a href="{{ path('manageUsers') }}" class="btn btn-info btn-dashboard">Manage users</a>
                    <a href="{{ path('manageComments') }}" class="btn btn-info btn-dashboard">Manage comments</a>
                    <a href="{{ path('article_new') }}" class="btn btn-info btn-dashboard">Create an article</a>
                    <a href="{{ path('admin') }}" class="btn btn-info btn-dashboard">Dashboard</a>
                </div>
            </div>

            <section class="ftco-section">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="case">
                                <div class="row">
                                    {% for article in articles %}
                                        {% if(article.published == false) %}
                                            <div class="col-xl-4 col-lg-6 col-md-12 card py-5 card-dashboard">
                                                <div class="text w-100 pl-md-3 text-center">
                                                    <img src="{{ vich_uploader_asset(article,'imageFile') }}" class="img-fluid mb-3" alt="{{ article.imagename }}">
                                                    <p class="text-center">Title</p>
                                                    <h3 class="text-center">
                                                        {{ article.title }}
                                                    </h3>
                                                    <p class="text-center">Region</p>
                                                    <h3 class="text-center">
                                                        {{ article.region.name }}
                                                    </h3>
                                                    <p class="text-center">Category</p>
                                                    <h3 class="text-center">
                                                        {{ article.category.name }}
                                                    </h3>
                                                    <p class="text-center">Number of comments</p>
                                                    <h3 class="text-center">
                                                        {{ article.comments | length }}
                                                    </h3>
                                                    <p class="text-center">Creation date</p>
                                                    <h3 class="text-center">
                                                        {{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}
                                                    </h3>
                                                    <br>
                                                    <p class="text-center">Available options</p>
                                                    <div class="d-flex justify-content-center">
                                                        <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-info mx-2 display-button">See</a>
                                                        <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-warning mx-2 modify-button">Edit</a>
                                                        <a href="{{ path('manage_pending_articles', {'id': article.id}) }}" class="btn btn-success mx-2 modify-button">Validate</a>
                                                        {{ include('article/_delete_form.html.twig') }}
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
    {{ knp_pagination_render(articles) }}

{% endblock %}
